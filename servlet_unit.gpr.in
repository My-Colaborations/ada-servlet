with "@UTIL_DIR@config";
with "@UTIL_DIR@util";
with "@UTIL_DIR@util_unit";
with "@EL_DIR@el";
with "servlet_core";

project Servlet_Unit is

   Library_Dir := "lib";
   Library_Type : Config.Library_Type_Type := external ("SERVLET_LIBRARY_TYPE", "static");

   for Source_Dirs use ("servlet_unit");

   for Library_Name use "ada_servlet_unit";
   for Library_Kind use Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Servlet_Core.Version;

   for Library_Dir use Library_Dir & "/servletunit/" & Project'Library_Kind;
   for Object_Dir use "./" & Config'Object_Dir & "/obj/servletunit/" & Project'Library_Kind;
   for Exec_Dir use "./" & Config'Exec_Dir & "/bin";

   package Binder   renames Config.Binder;
   package Builder  renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Ide      renames Config.Ide;

end Servlet_Unit;
