with "@UTIL_DIR@config";
with "servlet_core";
with "@UTIL_DIR@util_http_aws";
@WITH_SERVER@

project Servlet_Aws is

   Version := "@SERVLET_VERSION@";
   Library_Dir := "@SERVLET_LIBDIR@";
   Library_Type : Config.Library_Type_Type := external ("SERVLET_LIBRARY_TYPE", "static");

   Has_Aws     : Config.Yes_No := "@SERVLET_HAVE_AWS@";

   type Server_Type is ("none", "aws");
   Server : Server_Type := external ("SERVER", "@SERVLET_SERVER@");

   for Source_Dirs use ();
   case Server is
      when "aws" =>
          for Source_Dirs use project'Source_Dirs & ("src/aws");

      when others =>

   end case;

   for Library_Name use "ada_servlet_aws";
   for Library_Kind use Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Version;

   for Library_Dir use Library_Dir & "/servlet_aws/" & Project'Library_Kind;
   for Object_Dir use "./" & Config'Object_Dir & "/obj/servlet_aws/" & Project'Library_Kind;

   package Binder renames Config.Binder;
   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Ide      renames Config.Ide;

end Servlet_Aws;
